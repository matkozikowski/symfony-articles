{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div class="page-header">
<h1> Admin Panel </h1>
</div>
<div class="hero-unit">
		<div class="login-panel">
			<form action="{{ path("fos_user_security_check") }}" method="post">
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<p>
			    <label for="username">{{ 'User Name'|trans({}, 'FOSUserBundle') }}</label>
			    <div class="input-prepend">
			    	<span class="add-on"><i class="icon-user"></i></span>
			    	<input type="text" id="username" name="_username" value="{{ last_username }}" />
			    </div>
			</p>
			<p>
			    <label for="password">{{ 'Password'|trans({}, 'FOSUserBundle') }}</label>
			    <div class="input-prepend">
			    	<span class="add-on"><i class="icon-folder-close"></i></span>
			    	<input type="password" id="password" name="_password" />
			    </div>
			</p>
			<p>
			    <input style="remember-me" type="checkbox" id="remember_me" name="_remember_me" value="on" />
			    <label for="remember_me">{{ 'remember password'|trans({}, 'FOSUserBundle') }}</label>
			</p>
			<p>
			    <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'Login'|trans({}, 'FOSUserBundle') }}" />
			</p>
			</form>
		</div>
</div>
{% endblock %}



